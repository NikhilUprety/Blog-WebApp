@model List<TinyBlog.ViewModel.UserVMcs>;
@{
    ViewData["Title"] = "Index";
}
    
<div class="container">


    <div class="card">
        <div clss="card-head bg-primary">
            <h2 class="text-white">List Of Users</h2>
        </div>
        <div class="card-body">

        <table class="table table-striped table-hover">     
            <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>UserName</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model)
                    {
                        <tr>
                            <th>@user.FirstName</th>
                            <th>@user.LastName</th>
                            <th>@user.Username</th>

                            <th class="d-flex flex-row align-items-center justify-content-between">
                                <a class="bg-danger p-1 text-light rounded ">

                                    <ion-icon name="trash-outline"></ion-icon>
                                </a>
                                <a class="bg-success p-1 text-light rounded">
                                    <ion-icon name="create-outline"></ion-icon>
                                </a>
                                <a  class="bg-primary p-1 text-light rounded">
                                    <ion-icon name="person-circle-outline"></ion-icon>
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
        </table>
        </div>
    </div>
 
    //
</div> 
    <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://cdn.jsdelivr.net/npm/ionicons/dist/ionicons/ionicons.js"></script>