@model List<TinyBlog.ViewModel.UserVMcs>;
@{
    ViewData["Title"] = "Index";
}
    
<div class="container">
        
    <a class="btn btn-primary mb-2" asp-action="Register" asp-controller="User" asp-area="Admin">Add User</a>
    <div class="card">
        <div class="card-head bg-primary">
            <h2 class="text-white mt-2 ml-3">List Of Users</h2>
        </div>
        <div class="card-body">
                
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th>@user.FirstName</th>
                            <th>@user.LastName</th>
                            <th>@user.Username</th>
                            <th>@user.Email</th>
                            <th>@user.Role</th>


                            <th class="d-flex flex-row align-items-center justify-content-between">
                         
                                <a class="bg-success p-1 text-light rounded" asp-action="ResetPassword" asp-controller="User" asp-route-id="@user.ID">
                                    <ion-icon name="create-outline">Reset Password</ion-icon>
                                </a>
                                <a class="bg-danger p-1 text-light rounded ">

                                    <ion-icon name="trash-outline"></ion-icon>
                                </a>
                                <a class="bg-primary p-1 text-light rounded">
                                    <ion-icon name="person-circle-outline"></ion-icon>  
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
                
        </table>
        </div>
    </div>
 
    
</div> 
    <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://cdn.jsdelivr.net/npm/ionicons/dist/ionicons/ionicons.js"></script>